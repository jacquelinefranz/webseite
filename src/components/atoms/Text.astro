---
interface Props {
  /** Die Größe des Textes */
  size?: 'xs' | 'sm' | 'base' | 'md' | 'lg';
  /** Die Farbe des Textes */
  color?: 'primary' | 'secondary' | 'subtle';
  /** CSS-Klasse für das Element */
  class?: string;
  /** Ob der Text zentriert werden soll */
  centered?: boolean;
  /** HTML-Tag für semantisches HTML */
  as?: 'p' | 'span' | 'div';
}

const {
  size = 'base',
  color = 'primary',
  class: className,
  centered = false,
  as: Tag = 'p'
} = Astro.props;
---

<Tag
  class:list={[
    'text',
    `text--${size}`,
    `text--${color}`,
    centered && 'text--centered',
    className
  ]}
>
  <slot />
</Tag>

<style>
  .text {
    font-family: var(--font-family-base);
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-normal);
    margin: 0;
  }

  /* Size Variants */
  .text--xs {
    font-size: var(--font-size-xs);
  }

  .text--sm {
    font-size: var(--font-size-sm);
  }

  .text--base {
    font-size: var(--font-size-base);
  }

  .text--md {
    font-size: var(--font-size-md);
  }

  .text--lg {
    font-size: var(--font-size-lg);
  }

  /* Color Variants */
  .text--primary {
    color: var(--color-text-primary);
  }

  .text--secondary {
    color: var(--color-text-secondary);
  }

  .text--subtle {
    color: var(--color-text-subtle);
  }

  .text--centered {
    text-align: center;
  }
</style>
