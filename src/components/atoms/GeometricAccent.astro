---
/**
 * GeometricAccent Component
 *
 * Dekorative geometrische Akzente f√ºr Modern & Tech-Forward Design.
 * Zeigt Linien, Punkte oder Grid-Muster als subtile visuelle Elemente.
 */

export interface Props {
  /** Art des geometrischen Akzents */
  type?: 'line' | 'dot' | 'grid';
  /** Position des Akzents */
  position?: 'top-left' | 'top-right' | 'bottom-left' | 'bottom-right' | 'center';
  /** Optionale CSS-Klasse */
  class?: string;
}

const {
  type = 'line',
  position = 'top-left',
  class: className = ''
} = Astro.props;
---

<div class:list={['geometric-accent', `accent-${type}`, `position-${position}`, className]} aria-hidden="true">
  {type === 'line' && <div class="line"></div>}
  {type === 'dot' && <div class="dot"></div>}
  {type === 'grid' && <div class="grid-pattern"></div>}
</div>

<style>
  .geometric-accent {
    position: absolute;
    pointer-events: none;
    z-index: var(--z-base);
  }

  /* Positioning */
  .position-top-left {
    top: 0;
    left: 0;
  }

  .position-top-right {
    top: 0;
    right: 0;
  }

  .position-bottom-left {
    bottom: 0;
    left: 0;
  }

  .position-bottom-right {
    bottom: 0;
    right: 0;
  }

  .position-center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  /* Line Accent */
  .accent-line .line {
    width: 60px;
    height: var(--layout-line-width);
    background-color: var(--color-primary);
    opacity: 0.3;
  }

  /* Dot Accent */
  .accent-dot .dot {
    width: var(--layout-dot-size);
    height: var(--layout-dot-size);
    border-radius: 50%;
    background-color: var(--color-primary);
    opacity: 0.4;
    box-shadow: var(--layout-geometric-dot-shadow);
  }

  /* Grid Pattern */
  .accent-grid .grid-pattern {
    width: 120px;
    height: 120px;
    background-image:
      linear-gradient(var(--color-border) var(--layout-line-width), transparent var(--layout-line-width)),
      linear-gradient(90deg, var(--color-border) var(--layout-line-width), transparent var(--layout-line-width));
    background-size: 20px 20px;
    opacity: 0.2;
  }
</style>
