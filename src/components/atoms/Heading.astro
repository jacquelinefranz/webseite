---
interface Props {
  /** Das Heading-Level */
  level?: 1 | 2 | 3 | 4;
  /** CSS-Klasse f√ºr das Element */
  class?: string;
  /** Ob der Text zentriert werden soll */
  centered?: boolean;
}

const {
  level = 2,
  class: className,
  centered = false
} = Astro.props;

const Tag = `h${level}` as 'h1' | 'h2' | 'h3' | 'h4';
---

<Tag class:list={['heading', `heading--${level}`, centered && 'heading--centered', className]}>
  <slot />
</Tag>

<style>
  .heading {
    font-family: var(--font-family-heading);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    color: var(--color-text-primary);
    margin: 0;
  }

  .heading--1 {
    font-size: var(--font-size-h1);
  }

  .heading--2 {
    font-size: var(--font-size-h2);
  }

  .heading--3 {
    font-size: var(--font-size-h3);
  }

  .heading--4 {
    font-size: var(--font-size-h4);
  }

  .heading--centered {
    text-align: center;
  }
</style>
