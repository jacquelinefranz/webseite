---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import defaultProfileImage from '../../assets/jacqueline-franz-profilbild.png';

interface Props {
  /** Der Pfad zum Profilbild */
  src?: string | ImageMetadata;
  /** Der Alternativtext für das Bild */
  alt?: string;
  /** CSS Klasse für das Wrapper-Element */
  class?: string;
  /** Explizite Breite für das img-Attribut (Layout Shift Prevention) */
  width?: number;
  /** Explizite Höhe für das img-Attribut */
  height?: number;
  /** Ladeverhalten */
  loading?: "eager" | "lazy";
}

const { 
  src = defaultProfileImage, 
  alt = "Profilbild von Jacqueline Franz",
  class: className,
  width = 800, // Standardbreite für gute Qualität
  height,
  loading = "lazy"
} = Astro.props;
---

<div class:list={["profile-image-wrapper", className]}>
    <Image
        src={src}
        alt={alt}
        width={width}
        height={height}
        loading={loading}
        class="profile-image"
    />
</div>

<style>
    .profile-image-wrapper {
        display: block;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .profile-image {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
