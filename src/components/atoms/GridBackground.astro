---
/**
 * GridBackground Component
 *
 * Subtiles Punktraster als Hintergrundmuster f√ºr Modern & Tech-Forward Design.
 * Erzeugt eine dezente technische Anmutung ohne zu dominieren.
 */

export interface Props {
  /** Transparenz des Grid-Patterns (0-1) */
  opacity?: number;
  /** Optionale CSS-Klasse */
  class?: string;
}

const {
  opacity = 0.03,
  class: className = ''
} = Astro.props;
---

<div
  class:list={['grid-background', className]}
  style={`--grid-opacity: ${opacity};`}
  aria-hidden="true"
>
</div>

<style>
  .grid-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: var(--z-base);
    opacity: var(--grid-opacity, 0.03);
    background-image: radial-gradient(
      circle,
      var(--layout-grid-color) 1px,
      transparent 1px
    );
    background-size: 24px 24px;
    background-position: 0 0;
  }

  /* Verhindert Flickern auf manchen Browsern */
  .grid-background::before {
    content: '';
    position: absolute;
    inset: 0;
    background: inherit;
  }
</style>
