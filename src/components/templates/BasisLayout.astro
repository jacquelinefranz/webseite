---
import { ViewTransitions } from 'astro:transitions';
import '../../styles/tokens.css';
import SEO from '../atoms/SEO.astro'; // Import SEO component
import HauptNavigation from '../organisms/HauptNavigation.astro';
import Footer from '../organisms/Footer.astro';

/**
 * Definiert die Eigenschaften für das BasisLayout.
 */
interface Props {
	/** Der Titel der Seite, der an die SEO-Komponente weitergegeben wird. */
	titel: string;
	/** Die Beschreibung der Seite, die an die SEO-Komponente weitergegeben wird. */
	beschreibung?: string;
	/** Das Vorschaubild der Seite für Social Media, an die SEO-Komponente weitergegeben. */
	bild?: string;
	/** Der Typ des Inhalts für Social Media, an die SEO-Komponente weitergegeben (z.B. 'website', 'article'). */
	typ?: 'website' | 'article';
}

const { titel, beschreibung, bild, typ } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			titel={titel}
			beschreibung={beschreibung || "Eine persönliche Webseite von Jacqueline Franz über Webentwicklung und Blogbeiträge."}
			bild={bild}
			typ={typ}
		/>
		<ViewTransitions />
		<style is:global>
			/* CSS Reset und grundlegende Stile */

			html {
				box-sizing: border-box;
				font-size: 16px;
			}

			*, *::before, *::after {
				box-sizing: inherit;
			}

			body {
				margin: 0;
				padding: 0;
				font-family: var(--schriftart-standard);
				line-height: var(--linienhoehe-standard);
				color: var(--textfarbe);
				background-color: var(--hintergrundfarbe);
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				display: flex;
				flex-direction: column;
				min-height: 100vh;
			}

			/* Grundlegende Typografie */
			h1, h2 {
				margin-top: var(--abstand-ueberschrift-oben);
				margin-bottom: var(--abstand-ueberschrift-unten);
				line-height: var(--linienhoehe-ueberschrift);
				color: var(--textfarbe); /* Kann später angepasst werden */
			}

			h1 {
				font-size: var(--schriftgroesse-h1-mobil);
			}

			h2 {
				font-size: var(--schriftgroesse-h2-mobil);
			}

			p {
				margin-top: 0;
				margin-bottom: var(--abstand-absatz-unten);
			}

			a {
				color: var(--primärfarbe);
				text-decoration: none;
			}

			a:hover {
				text-decoration: underline;
			}

			main {
				max-width: var(--seitenbreite-max);
				margin: var(--abstand-main-vertikal-mobil) auto;
				padding: 0 var(--padding-main-horizontal);
				flex: 1;
				width: 100%;
			}

			section {
				margin-bottom: var(--abstand-sektion-unten);
			}

			ul {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			li {
				margin-bottom: var(--abstand-listenelement-unten);
			}

			/* Responsives Design - Mobile First */
			@media (min-width: var(--breakpoint-md)) {
				h1 {
					font-size: var(--schriftgroesse-h1-desktop);
				}
				h2 {
					font-size: var(--schriftgroesse-h2-desktop);
				}
				main {
					margin: var(--abstand-main-vertikal-desktop) auto;
				}
			}
		</style>
	</head>
	<body>
		<HauptNavigation>
			<a href="/">Home</a>
			<a href="/blog">Blog</a>
		</HauptNavigation>
		<slot />
		<Footer />
	</body>
</html>