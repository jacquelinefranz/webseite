---
import { Icon } from 'astro-icon/components';

interface Props {
  /** Skill-Label */
  label: string;
  /** Icon-Name */
  icon?: string;
  /** Kategorie für Farbkodierung */
  category?: 'product' | 'design' | 'tech' | 'soft';
  /** CSS-Klasse für das Wrapper-Element */
  class?: string;
}

const {
  label,
  icon,
  category = 'tech',
  class: className
} = Astro.props;

// Kategorie-basierte Farbkodierung
const categoryColors: Record<string, string> = {
  product: 'var(--color-primary)',
  design: 'var(--color-accent)',
  tech: 'var(--color-info)',
  soft: 'var(--color-success)'
};

const accentColor = categoryColors[category] || categoryColors.tech;
---

<div
  class:list={['skill-block-bold', className]}
  style={`--skill-accent-color: ${accentColor};`}
>
  <div class="skill-block-bold__color-accent"></div>
  <div class="skill-block-bold__content">
    {icon && <Icon name={icon} class="skill-block-bold__icon" />}
    <span class="skill-block-bold__label">{label}</span>
  </div>
</div>

<style>
  .skill-block-bold {
    position: relative;
    background-color: var(--color-background-surface);
    border: var(--border-width-medium) solid var(--color-border);
    /* Asymmetrischer Border-Radius */
    border-radius: var(--border-radius-sm) var(--border-radius-sm) var(--border-radius-md) var(--border-radius-sm);
    overflow: hidden;
    transition: var(--transition-all);
    min-width: 200px;
    height: 140px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  /* Farbblock-Akzent - diagonal */
  .skill-block-bold__color-accent {
    position: absolute;
    top: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: var(--skill-accent-color);
    opacity: 0.15;
    transform: skewX(-8deg);
    transform-origin: top right;
    transition: var(--transition-all);
  }

  .skill-block-bold:hover .skill-block-bold__color-accent {
    width: 100%;
    opacity: 0.25;
    transform: skewX(0deg);
  }

  .skill-block-bold:hover {
    border-color: var(--skill-accent-color);
    transform: translateY(-6px) scale(1.02);
    box-shadow: var(--shadow-xl);
  }

  /* Content */
  .skill-block-bold__content {
    position: relative;
    z-index: 1;
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: flex-start;
  }

  .skill-block-bold__icon {
    width: 2rem;
    height: 2rem;
    color: var(--skill-accent-color);
    transition: var(--transition-transform);
  }

  .skill-block-bold:hover .skill-block-bold__icon {
    transform: scale(1.1) rotate(5deg);
  }

  .skill-block-bold__label {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
  }
</style>
