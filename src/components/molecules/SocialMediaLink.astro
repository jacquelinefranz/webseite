---
import { Icon } from 'astro-icon/components';

interface Props {
    /** Der Name des Icons aus dem Lucide-Set (z.B. 'lucide:instagram'). */
    icon: string;
    /** Die URL zum Social Media Profil. */
    href: string;
    /** Der sichtbare Text des Links. */
    text: string;
}

const { icon, href, text } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer" class="social-link">
    <Icon name={icon} class="icon" />
    <span>{text}</span>
</a>

<style>
    .social-link {
        display: inline-flex;
        align-items: center;
        gap: var(--abstand-s); /* Design Token verwendet */
        text-decoration: none;
        color: inherit;
    }

    .social-link:hover {
        text-decoration: underline;
    }

    .icon {
        width: 1.2em;
        height: 1.2em;
    }
</style>