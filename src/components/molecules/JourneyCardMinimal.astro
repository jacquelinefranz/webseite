---
/**
 * JourneyCardMinimal Component
 *
 * Minimale Karte f√ºr Journey-Stationen im Modern & Tech-Forward Design.
 * Zeigt Jahr, Titel, Beschreibung und Kategorie mit subtiler Hover-Interaktion.
 */

import GeometricAccent from '../atoms/GeometricAccent.astro';

export interface Props {
  /** Jahr der Station */
  year: string;
  /** Titel der Station */
  title: string;
  /** Beschreibung der Station */
  description: string;
  /** Kategorie (z.B. "Education", "Career") */
  category?: string;
  /** Optionale CSS-Klasse */
  class?: string;
}

const {
  year,
  title,
  description,
  category,
  class: className = ''
} = Astro.props;
---

<article class:list={['journey-card-minimal', className]}>
  <div class="card-content">
    <div class="card-header">
      <span class="year" aria-label={`Year ${year}`}>{year}</span>
      {category && <span class="category">{category}</span>}
    </div>

    <h3 class="title">{title}</h3>
    <p class="description">{description}</p>

    <GeometricAccent type="line" position="bottom-left" />
  </div>
</article>

<style>
  .journey-card-minimal {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card-content {
    position: relative;
    padding: var(--spacing-md);
    background-color: var(--color-background-surface);
    border: var(--border-width-thin) solid var(--color-border);
    border-radius: var(--border-radius-md);
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    transition: var(--transition-all);
  }

  .card-content:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .card-content:hover .title::after {
    width: 100%;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .year {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-primary);
    letter-spacing: 0.05em;
  }

  .category {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-subtle);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .title {
    position: relative;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-heading);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    margin: 0;
  }

  /* Hover-Unterstreichung */
  .title::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-primary);
    transition: width var(--transition-base);
  }

  .description {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    line-height: var(--line-height-normal);
    margin: 0;
    flex-grow: 1;
  }

  /* Responsive Anpassungen */
  @media (max-width: 768px) {
    .card-content {
      padding: var(--spacing-sm);
    }

    .card-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
