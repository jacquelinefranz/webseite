---
import SkillBlockBold from '../../molecules/SkillBlockBold.astro';

interface Skill {
  label: string;
  icon?: string;
  category?: 'product' | 'design' | 'tech' | 'soft';
}

interface Props {
  /** Array von Skills */
  skills: Skill[];
  /** Überschrift der Sektion */
  headline?: string;
  /** CSS-Klasse für das Wrapper-Element */
  class?: string;
}

const {
  skills,
  headline = 'Skills & Kompetenzen',
  class: className
} = Astro.props;
---

<section class:list={['skills-showcase', className]}>
  <div class="skills-showcase__container">
    {headline && (
      <h2 class="skills-showcase__headline">{headline}</h2>
    )}

    <div class="skills-showcase__scroll-wrapper">
      <div class="skills-showcase__scroll-container">
        {skills.map((skill) => (
          <SkillBlockBold
            label={skill.label}
            icon={skill.icon}
            category={skill.category}
          />
        ))}
      </div>

      <!-- Fade-out Gradients für Scroll-Indikation -->
      <div class="skills-showcase__fade-left"></div>
      <div class="skills-showcase__fade-right"></div>
    </div>
  </div>
</section>

<style>
  .skills-showcase {
    padding: var(--spacing-section-vertical) 0;
    background-color: var(--color-background-surface);
    overflow: hidden;
  }

  .skills-showcase__container {
    width: 100%;
    margin: 0 auto;
  }

  .skills-showcase__headline {
    font-size: var(--font-size-h2);
    font-weight: var(--font-weight-heading);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-heading);
    margin: 0 0 var(--spacing-2xl) 0;
    padding: 0 var(--container-padding);
    max-width: var(--container-max-width);
    margin-left: auto;
    margin-right: auto;
  }

  /* Scroll Wrapper mit Gradients */
  .skills-showcase__scroll-wrapper {
    position: relative;
    width: 100%;
  }

  /* Horizontales Scroll-Container */
  .skills-showcase__scroll-container {
    display: flex;
    gap: var(--spacing-lg);
    overflow-x: auto;
    overflow-y: hidden;
    padding: var(--spacing-md) var(--container-padding);
    scroll-snap-type: x mandatory;
    scrollbar-width: thin;
    scrollbar-color: var(--color-primary) var(--color-background-base);

    /* Webkit Scrollbar Styling */
    &::-webkit-scrollbar {
      height: 8px;
    }

    &::-webkit-scrollbar-track {
      background: var(--color-background-base);
    }

    &::-webkit-scrollbar-thumb {
      background: var(--color-primary);
      border-radius: var(--border-radius-full);
    }

    &::-webkit-scrollbar-thumb:hover {
      background: var(--color-primary-hover);
    }
  }

  .skills-showcase__scroll-container > * {
    scroll-snap-align: start;
    flex-shrink: 0;
  }

  /* Fade-out Gradients */
  .skills-showcase__fade-left,
  .skills-showcase__fade-right {
    position: absolute;
    top: 0;
    bottom: 0;
    width: clamp(2rem, 5vw, 4rem);
    pointer-events: none;
    z-index: 1;
  }

  .skills-showcase__fade-left {
    left: 0;
    background: linear-gradient(to right, var(--color-background-surface), transparent);
  }

  .skills-showcase__fade-right {
    right: 0;
    background: linear-gradient(to left, var(--color-background-surface), transparent);
  }

  /* Animation beim Laden */
  @media (prefers-reduced-motion: no-preference) {
    .skills-showcase__headline {
      animation: fadeIn 0.6s ease-out;
    }

    .skills-showcase__scroll-container > * {
      animation: slideInFromRight 0.8s ease-out both;
    }

    /* Staggered Animation */
    .skills-showcase__scroll-container > *:nth-child(1) { animation-delay: 0.1s; }
    .skills-showcase__scroll-container > *:nth-child(2) { animation-delay: 0.2s; }
    .skills-showcase__scroll-container > *:nth-child(3) { animation-delay: 0.3s; }
    .skills-showcase__scroll-container > *:nth-child(4) { animation-delay: 0.4s; }
    .skills-showcase__scroll-container > *:nth-child(5) { animation-delay: 0.5s; }
    .skills-showcase__scroll-container > *:nth-child(6) { animation-delay: 0.6s; }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slideInFromRight {
      from {
        opacity: 0;
        transform: translateX(50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
  }
</style>
