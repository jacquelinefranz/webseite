---
/**
 * SkillsMatrix Component
 *
 * Grid-Matrix für Skills im Modern & Tech-Forward Design.
 * Zeigt Skills in einem 6-Spalten Grid mit Icon und Label.
 */

export interface Skill {
  /** Name des Skills */
  label: string;
  /** Icon (Emoji oder SVG-Code) */
  icon?: string;
  /** Optionale Kategorie */
  category?: string;
}

export interface Props {
  /** Array von Skills */
  skills: Skill[];
  /** Überschrift der Sektion */
  title?: string;
  /** Optionale CSS-Klasse */
  class?: string;
}

const {
  skills,
  title,
  class: className = ''
} = Astro.props;
---

<section class:list={['skills-matrix', className]}>
  <div class="skills-container">
    {title && <h2 class="section-title">{title}</h2>}

    <div class="skills-grid">
      {skills.map((skill) => (
        <div class="skill-item">
          {skill.icon && (
            <div class="skill-icon" aria-hidden="true">
              {skill.icon}
            </div>
          )}
          <div class="skill-content">
            <span class="skill-label">{skill.label}</span>
            {skill.category && (
              <span class="skill-category">{skill.category}</span>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills-matrix {
    padding: var(--spacing-section-vertical) var(--container-padding);
    background-color: var(--color-background-surface);
  }

  .skills-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
  }

  .section-title {
    font-size: var(--font-size-h2);
    font-weight: var(--font-weight-heading);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    margin: 0 0 var(--spacing-xl) 0;
    text-align: center;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--spacing-md);
  }

  .skill-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md);
    background-color: var(--color-background-base);
    border: var(--border-width-thin) solid var(--color-border);
    border-radius: var(--border-radius-lg);
    transition: var(--transition-all);
    text-align: center;
  }

  .skill-item:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    font-size: 2rem;
    line-height: 1;
    transition: transform var(--transition-base);
  }

  .skill-item:hover .skill-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .skill-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .skill-label {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
  }

  .skill-category {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    font-family: var(--font-family-mono);
    color: var(--color-text-subtle);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Responsive Grid */
  @media (max-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-sm);
    }

    .skill-item {
      padding: var(--spacing-sm);
    }

    .skill-icon {
      width: 36px;
      height: 36px;
      font-size: 1.5rem;
    }
  }
</style>
