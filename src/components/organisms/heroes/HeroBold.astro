---
import Button from '../../atoms/Button.astro';

interface Props {
  /** Große Headline */
  headline: string;
  /** Tagline / Subheadline */
  tagline: string;
  /** Primärer CTA Text */
  primaryCTA: string;
  /** Primärer CTA Link */
  primaryCTAHref: string;
  /** Sekundärer CTA Text (optional) */
  secondaryCTA?: string;
  /** Sekundärer CTA Link (optional) */
  secondaryCTAHref?: string;
  /** CSS-Klasse für das Wrapper-Element */
  class?: string;
}

const {
  headline,
  tagline,
  primaryCTA,
  primaryCTAHref,
  secondaryCTA,
  secondaryCTAHref,
  class: className
} = Astro.props;
---

<section class:list={['hero-bold', className]}>
  <div class="hero-bold__background-gradient"></div>

  <div class="hero-bold__container">
    <div class="hero-bold__content">
      <p class="hero-bold__tagline">{tagline}</p>
      <h1 class="hero-bold__headline">{headline}</h1>

      <div class="hero-bold__cta-group">
        <Button
          variant="primary"
          href={primaryCTAHref}
          icon="mingcute:arrow-right-line"
          class="hero-bold__cta-primary"
        >
          {primaryCTA}
        </Button>

        {secondaryCTA && secondaryCTAHref && (
          <Button
            variant="secondary"
            href={secondaryCTAHref}
            class="hero-bold__cta-secondary"
          >
            {secondaryCTA}
          </Button>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-bold {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: var(--color-background-base);
  }

  /* Hintergrund: Farbblock-Gradient (diagonal) */
  .hero-bold__background-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--layout-gradient-primary-secondary);
    opacity: 0.12;
    transform: skewY(var(--layout-skew-angle));
    transform-origin: top left;
    z-index: 0;
  }

  .hero-bold__container {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: var(--container-max-width);
    padding: var(--container-padding);
  }

  .hero-bold__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
    max-width: 900px;
  }

  .hero-bold__tagline {
    font-size: var(--font-size-md);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-accent);
    margin: 0;
  }

  /* Übergroße Typografie */
  .hero-bold__headline {
    font-size: var(--font-size-h1);
    font-weight: var(--font-weight-heading);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-heading);
    margin: 0;
  }

  /* Asymmetrische CTA-Positionierung */
  .hero-bold__cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    align-items: center;
    margin-top: var(--spacing-lg);
  }

  .hero-bold__cta-primary {
    transform: translateX(0);
  }

  .hero-bold__cta-secondary {
    transform: translateX(var(--spacing-md));
  }

  /* Responsive Anpassungen */
  @media (min-width: 768px) {
    .hero-bold__content {
      gap: var(--spacing-2xl);
    }

    .hero-bold__cta-group {
      margin-top: var(--spacing-xl);
    }
  }

  /* Animation beim Laden */
  @media (prefers-reduced-motion: no-preference) {
    .hero-bold__tagline {
      animation: slideInFromLeft 0.6s ease-out;
    }

    .hero-bold__headline {
      animation: slideInFromLeft 0.8s ease-out 0.2s both;
    }

    .hero-bold__cta-group {
      animation: fadeIn 1s ease-out 0.6s both;
    }

    @keyframes slideInFromLeft {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
  }
</style>
