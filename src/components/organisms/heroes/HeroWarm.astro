---
import DecoratedProfilBild from '../../molecules/DecoratedProfilBild.astro';
import Button from '../../atoms/Button.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  /** Hauptüberschrift */
  headline: string;
  /** Unterzeile / Tagline */
  tagline: string;
  /** Primärer Call-to-Action */
  primaryCTA: {
    text: string;
    url: string;
  };
  /** Sekundärer Call-to-Action */
  secondaryCTA: {
    text: string;
    url: string;
  };
  /** Bild-Quelle für das Profilbild */
  imageSrc?: string | ImageMetadata;
  /** CSS-Klasse für das Wrapper-Element */
  class?: string;
}

const {
  headline,
  tagline,
  primaryCTA,
  secondaryCTA,
  imageSrc,
  class: className
} = Astro.props;
---

<section class:list={['hero-warm', className]}>
  <div class="hero-warm__container">
    <!-- Profilbild mit Blob-Dekoration -->
    <DecoratedProfilBild
      imageSrc={imageSrc}
      imageAlt="Profilbild von Jacqueline Franz"
      blobSize="xl"
      blobColor="var(--color-accent-light)"
      animated={true}
      loading="eager"
      imageWidth={800}
      class="hero-warm__image-wrapper"
    />

    <!-- Text-Content -->
    <div class="hero-warm__content">
      <h1 class="hero-warm__headline">{headline}</h1>
      <p class="hero-warm__tagline">{tagline}</p>

      <div class="hero-warm__cta-group">
        <Button
          href={primaryCTA.url}
          variant="primary"
          icon="mingcute:arrow-right-line"
        >
          {primaryCTA.text}
        </Button>

        <Button
          href={secondaryCTA.url}
          variant="secondary"
          icon="mingcute:mail-line"
        >
          {secondaryCTA.text}
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-warm {
    background-color: var(--color-background-base);
    padding: var(--spacing-section-vertical) var(--spacing-section-horizontal);
    overflow: hidden;
  }

  .hero-warm__container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--layout-organic-spacing);
    align-items: center;
  }

  /* Image Section */
  .hero-warm__image-wrapper {
    /* Wrapper-spezifische Styles falls nötig */
  }

  /* Content Section */
  .hero-warm__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .hero-warm__headline {
    font-size: var(--font-size-h1);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    line-height: var(--line-height-tight);
    margin: 0;
  }

  .hero-warm__tagline {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-normal);
    margin: 0;
  }

  .hero-warm__cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-warm__container {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .hero-warm__image-wrapper {
      order: -1;
    }

    .hero-warm__content {
      text-align: center;
      align-items: center;
    }

    .hero-warm__cta-group {
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .hero-warm {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .hero-warm__cta-group {
      flex-direction: column;
      width: 100%;
    }

    .hero-warm__cta-group :global(.button) {
      width: 100%;
    }
  }
</style>
