---
import Link from '../atoms/Link.astro';
---

<nav>
    <Link href="/" text="Startseite" />
    <Link href="/blog" text="Blog" />
</nav>

<style>
    nav {
        display: flex;
        justify-content: center; /* Navigation zentrieren */
        gap: 2rem; /* Etwas mehr Abstand */
        padding: 1.5rem 1rem; /* Mehr Padding */
        background-color: #f8f9fa; /* Leichter Hintergrund */
        border-bottom: 1px solid #e9ecef; /* Dezente Trennlinie */
    }
    nav :global(a) {
        color: var(--textfarbe); /* Globale Textfarbe */
        font-weight: 600; /* Etwas dicker für Navigation */
        transition: color 0.3s ease; /* Weicher Übergang */
    }
    nav :global(a):hover {
        color: var(--primärfarbe); /* Globale Primärfarbe */
        text-decoration: none; /* Unterstreichung bei Hover entfernen */
    }
</style>
