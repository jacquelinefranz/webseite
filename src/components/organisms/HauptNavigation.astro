---
import Link from '../atoms/Link.astro';
---

<nav>
    <Link href="/" text="Startseite" />
    <Link href="/blog" text="Blog" />
</nav>

<style>
    nav {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        background-color: #f0f0f0;
    }
    nav :global(a) { /* Verwende :global() um den Stil auf das Link-Atom anzuwenden */
        text-decoration: none;
        color: #333;
        font-weight: bold;
    }
    nav :global(a):hover {
        color: #007bff;
    }
</style>