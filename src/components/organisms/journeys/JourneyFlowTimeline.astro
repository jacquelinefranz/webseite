---
import TimelineFlowItem from '../../molecules/TimelineFlowItem.astro';
import type { JourneyStation } from '../../../data/journeyData';

interface Props {
  /** Array der Journey-Stationen */
  stations: JourneyStation[];
  /** CSS-Klasse für das Wrapper-Element */
  class?: string;
}

const {
  stations,
  class: className
} = Astro.props;

// Prüfe, welche Station aktuell ist (die letzte mit "heute")
const currentIndex = stations.findIndex(station =>
  station.period.toLowerCase().includes('heute')
);
---

<section class:list={['journey-timeline', className]}>
  <div class="journey-timeline__container">
    <div class="journey-timeline__header">
      <h2 class="journey-timeline__title">Meine Journey</h2>
      <p class="journey-timeline__subtitle">
        Von der Werkstatt zum Product Management – eine Reise durch verschiedene Welten
      </p>
    </div>

    <div class="journey-timeline__flow">
      {stations.map((station, index) => (
        <div
          class:list={[
            'journey-timeline__item-wrapper',
            index % 2 === 0 ? 'journey-timeline__item-wrapper--left' : 'journey-timeline__item-wrapper--right'
          ]}
        >
          <TimelineFlowItem
            year={station.period}
            title={station.title}
            description={station.description}
            category={station.category}
            isCurrent={index === currentIndex}
          />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .journey-timeline {
    background-color: var(--color-background-surface);
    padding: var(--spacing-section-vertical) var(--spacing-section-horizontal);
  }

  .journey-timeline__container {
    max-width: var(--container-max-width);
    margin: 0 auto;
  }

  /* Header */
  .journey-timeline__header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .journey-timeline__title {
    font-size: var(--font-size-h2);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
    line-height: var(--line-height-tight);
  }

  .journey-timeline__subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-height-normal);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Timeline Flow */
  .journey-timeline__flow {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  /* Vertikale Verbindungslinie */
  .journey-timeline__flow::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      var(--color-primary) 0%,
      var(--color-accent) 50%,
      var(--color-success) 100%
    );
    transform: translateX(-50%);
    opacity: 0.3;
  }

  /* Item Wrapper für alternierenden Layout */
  .journey-timeline__item-wrapper {
    position: relative;
    margin-bottom: var(--spacing-2xl);
  }

  .journey-timeline__item-wrapper:last-child {
    margin-bottom: 0;
  }

  .journey-timeline__item-wrapper--left {
    padding-right: 50%;
    padding-right: calc(50% + var(--spacing-xl));
  }

  .journey-timeline__item-wrapper--right {
    padding-left: 50%;
    padding-left: calc(50% + var(--spacing-xl));
  }

  /* Geschwungene Verbindungslinien */
  .journey-timeline__item-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    width: var(--spacing-xl);
    height: 100%;
    border-style: solid;
    border-color: var(--color-border);
    opacity: 0.5;
  }

  .journey-timeline__item-wrapper--left::after {
    right: 50%;
    border-width: 0 2px 0 0;
    border-radius: 0 var(--border-radius-lg) 0 0;
  }

  .journey-timeline__item-wrapper--right::after {
    left: 50%;
    border-width: 0 0 0 2px;
    border-radius: var(--border-radius-lg) 0 0 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    /* Wechsel zu einspaltigem Layout */
    .journey-timeline__flow::before {
      left: var(--spacing-lg);
    }

    .journey-timeline__item-wrapper--left,
    .journey-timeline__item-wrapper--right {
      padding-left: calc(var(--spacing-lg) * 2);
      padding-right: 0;
    }

    .journey-timeline__item-wrapper::after {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .journey-timeline {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .journey-timeline__header {
      margin-bottom: var(--spacing-xl);
    }

    .journey-timeline__flow::before {
      left: var(--spacing-md);
    }

    .journey-timeline__item-wrapper--left,
    .journey-timeline__item-wrapper--right {
      padding-left: calc(var(--spacing-md) * 2.5);
    }

    .journey-timeline__item-wrapper {
      margin-bottom: var(--spacing-xl);
    }
  }
</style>
