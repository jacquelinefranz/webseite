---
/**
 * Card-Container mit einheitlichem Styling
 *
 * Nutzt Design Tokens für Card-Styling
 * Unterstützt unterschiedliche Padding-Größen
 * Optionaler Elevated-Style für Depth-Effekt
 */

interface Props {
  /** Padding-Größe: "sm" | "md" | "lg" | "xl" */
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  /** Erhöhter Schatten für Depth-Effekt */
  elevated?: boolean;
  /** Hintergrundfarbe überschreiben */
  background?: 'surface' | 'elevated' | 'base';
  /** CSS-Klasse für das Element */
  class?: string;
}

const {
  padding = 'lg',
  elevated = false,
  background = 'surface',
  class: className
} = Astro.props;

const paddingMap = {
  sm: '--spacing-sm',
  md: '--spacing-md',
  lg: '--spacing-lg',
  xl: '--spacing-xl'
};

const backgroundMap = {
  surface: '--color-background-surface',
  elevated: '--color-background-elevated',
  base: '--color-background-base'
};
---

<div
  class:list={[
    'card-section',
    { 'card-section--elevated': elevated },
    className
  ]}
  style={`
    --card-padding: var(${paddingMap[padding]});
    --card-background: var(${backgroundMap[background]});
  `}
>
  <slot />
</div>

<style>
  .card-section {
    padding: var(--card-padding);
    background-color: var(--card-background);
    border-radius: var(--layout-card-border-radius, var(--border-radius-md));
    border: var(--border-width-thin) solid var(--color-border);
    box-shadow: var(--shadow-sm);
    transition: var(--transition-all);
  }

  .card-section--elevated {
    box-shadow: var(--shadow-lg);
  }

  /* Responsive: Mobile */
  @media (max-width: 768px) {
    .card-section {
      --card-padding: var(--spacing-md);
      border-radius: var(--border-radius-sm);
    }
  }
</style>
