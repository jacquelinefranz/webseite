---
import BasisLayout from '../components/templates/BasisLayout.astro'; // Adjust path if BasisLayout moves
import BlogpostVorschau from '../components/molecules/BlogpostVorschau.astro';
import { getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog');
allBlogPosts.sort((a, b) => b.data.datum.getTime() - a.data.datum.getTime());
---

<BasisLayout
  titel="Alle Blogposts"
  beschreibung="Entdecke die neuesten Blogposts von Jacqueline Franz zu Webentwicklung, Astro und digitalen Themen."
  typ="website"
>
    <h1>Alle Blogposts</h1>
    <ul>
      {allBlogPosts.map(post => (
        <BlogpostVorschau titel={post.data.titel} url={`/blog/${post.slug}`} />
      ))}
    </ul>
</BasisLayout>