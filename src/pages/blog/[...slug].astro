---
import { getCollection, getEntry } from 'astro:content';
import BasisLayout from '../../components/templates/BasisLayout.astro';
import Ueberschrift1 from '../../components/atoms/Ueberschrift1.astro';

export async function getStaticPaths() {
	const blogEntries = await getCollection('blog');
	return blogEntries.map((entry) => ({
		params: { slug: entry.slug },
	}));
}

const { slug } = Astro.params;
const entry = await getEntry('blog', slug);

// Render a 404 page if the entry does not exist
if (!entry) {
	return new Response(null, {
		status: 404,
		statusText: 'Nicht gefunden',
	});
}

const { Content } = await entry.render();
---

<BasisLayout
  title={entry.data.title}
  description={entry.data.description}
  image={entry.data.image}
  type="article"
>
  <main>
    <Ueberschrift1 inhalt={entry.data.title} />
    <p>Ver√∂ffentlicht am: {entry.data.pubDate.toLocaleDateString('de-DE')}</p>
    <Content />
  </main>
</BasisLayout>
