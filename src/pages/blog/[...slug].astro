---
import { getCollection, getEntryBySlug } from 'astro:content';
import BasisLayout from '../../components/templates/BasisLayout.astro'; // Adjust path if BasisLayout moves
import Ueberschrift1 from '../../src/components/atoms/Ueberschrift1.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: any; // Using any for simplicity, but Entry<"blog"> would be more precise
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BasisLayout
  title={entry.data.title}
  description={entry.data.description}
  image={entry.data.image}
  type="article"
>
  <Ueberschrift1 inhalt={entry.data.title} />
  <p>Ver√∂ffentlicht am: {entry.data.pubDate.toLocaleDateString('de-DE')}</p>
  <Content />
</BasisLayout>
