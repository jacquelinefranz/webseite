---
import LandingLayout from '../components/templates/LandingLayout.astro';
import HeroBold from '../components/organisms/heroes/HeroBold.astro';
import JourneyGrid from '../components/organisms/journeys/JourneyGrid.astro';
import SkillsShowcase from '../components/organisms/skills/SkillsShowcase.astro';

import '../styles/tokens/variant-2.css';

import { heroData } from '../data/heroData';
import { journeyData } from '../data/journeyData';
import { skillsData } from '../data/skillsData';

const editorialHero = heroData.editorial;
---

<LandingLayout
  titel="Variante 2: Bold & Kreativ - Jacqueline Franz"
  beschreibung="Variante 2: Bold & Kreativ mit starken Kontrasten und dynamischen Layouts. Die kreative Seite meines Portfolios mit Fokus auf visuelle Wirkung und experimentelle Gestaltung."
  typ="website"
>
  <HeroBold
    headline={editorialHero.headline}
    tagline={editorialHero.tagline}
    primaryCTA={editorialHero.primaryCTA.text}
    primaryCTAHref={editorialHero.primaryCTA.url}
    secondaryCTA={editorialHero.secondaryCTA.text}
    secondaryCTAHref={editorialHero.secondaryCTA.url}
  />

  <JourneyGrid
    headline="Meine Entwicklung"
    stations={journeyData}
  />

  <SkillsShowcase
    headline="FÃ¤higkeiten & Tools"
    skills={skillsData}
  />
</LandingLayout>

<style>
  /* Variant-2 spezifische Styles */
  :global(body) {
    background-color: var(--color-background-base);
  }

  /* Spacing zwischen Sections */
  :global(section) {
    margin: var(--spacing-section-vertical) 0;
  }

  /* Sicherstelle, dass die erste Section keinen oberen Margin hat */
  :global(section:first-of-type) {
    margin-top: 0;
  }
</style>
